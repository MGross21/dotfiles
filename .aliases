search() {
    local output
    output=$(pacman -Si "$@" 2>/dev/null)
    if [[ -n "$output" ]]; then
        echo "$output"
    else
        yay -Si "$@"
    fi
}

cleanup() {
  local orphans
  orphans=$(pacman -Qdtq)

  if [[ -n "$orphans" ]]; then
    echo "Removing orphan packages:"
    echo "$orphans"
    sudo pacman -Rns $orphans
  else
    echo "No orphan packages to remove."
  fi

  yay -Scc --noconfirm
  yay -Yc --noconfirm
}


